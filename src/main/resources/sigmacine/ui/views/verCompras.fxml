<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@sigma.css">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="topbar">
            <children>
                <Button fx:id="btnVolver" styleClass="toplink" text="← Volver" />
                <Label styleClass="brand" text="SIGMA CINE" onMouseClicked="#onBrandClick" style="-fx-cursor: hand;" />
                <Button styleClass="toplink" text="Cartelera" disable="true" />
                <Button styleClass="toplink" text="Confitería" />
                <Button styleClass="toplink" text="Sigma Card" />
                <Region HBox.hgrow="ALWAYS" />
                <TextField promptText="Buscar" prefWidth="200" styleClass="search" />
                <VBox spacing="16">
                    <children>
                        <Button styleClass="toplink" text="Cart" />
                    </children>
                </VBox>
                <Button text="Iniciar sesión" styleClass="toplink" />
                <Label text="" styleClass="toplink" visible="false" />
                <Button text="Registrarse" styleClass="toplink" />
                <MenuButton styleClass="icon-btn" text="👤">
                    <items>
                        <MenuItem text="Mi Cuenta" />
                        <MenuItem text="Buscar Tiquetes" />
                        <MenuItem text="Confitería" />
                        <MenuItem text="Promociones" />
                        <MenuItem text="Información Personal" />
                        <MenuItem text="SigmaCard" />
                        <MenuItem text="Historial de compras" />
                        <MenuItem text="Notificaciones" />
                        <MenuItem text="Cartelera" />
                        <SeparatorMenuItem />
                        <MenuItem text="Cerrar Sesión" />
                    </items>
                </MenuButton>
            </children>
            <padding>
                <Insets bottom="8" left="16" right="16" top="8" />
            </padding>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox alignment="TOP_CENTER" spacing="16" style="-fx-padding: 16;">
                    <Label text="Historial de Compras" style="-fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-font-size: 24;" />
                    <VBox fx:id="comprasContainer" spacing="15.0" styleClass="centered-container" />
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>