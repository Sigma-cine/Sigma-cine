<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!-- Carrito angosto, con fondo negro y scroll -->

<StackPane fx:id="carritoRoot" fx:controller="sigmacine.ui.controller.VerCarritoController" style="-fx-background-color: #000000; -fx-pref-height: 502; -fx-pref-width: 330;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
  <children>

    <!-- Ancho total aprox 420; alto aprox 560 -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="502.0" prefWidth="336.0" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED">
      <content>

        <!-- Contenedor principal (borde rojo) un poco más angosto -->
        <VBox prefHeight="500.0" prefWidth="339.0" style="-fx-padding: 25; -fx-spacing: 16; -fx-border-color: #8B2E21; -fx-border-width: 6; -fx-background-color: black; -fx-pref-height: 500; -fx-pref-width: 370;">
          <children>

            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" text="Mi carrito" />

            <!-- Lista dinámica de productos en carrito -->
            <ListView fx:id="listaItems" prefHeight="200.0" prefWidth="300.0" />

            <!-- Resumen -->
            <VBox prefHeight="175.0" prefWidth="314.0" style="-fx-padding: 8; -fx-spacing: 12;">
              <children>
                <Label style="-fx-text-fill: #929292; -fx-font-size: 12px; -fx-font-weight: bold;" text="Tiquetes" />
                <HBox>
                  <children>
                    <Label style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: white;" text="Total tiquetes" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label fx:id="lblTotal" prefHeight="15.0" prefWidth="65.0" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: white;" text="[Precio]" />
                  </children>
                </HBox>
                <HBox style="-fx-background-color: #2B2B2B; -fx-background-radius: 10; -fx-spacing: 10; -fx-padding: 7;">
                  <children>
                    <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #ffffff;" text="TOTAL" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #ffffff;" text="[Precio]" />
                  </children>
                </HBox>
              </children>
            </VBox>
                  <Region prefHeight="200.0" prefWidth="200.0" />

            <!-- Botón pagar -->
            <HBox alignment="CENTER">
              <children>
                <Button style="-fx-background-color: #8B2E21; -fx-font-size: 13px; -fx-text-fill: white; -fx-padding: 7 18; -fx-background-radius: 20; -fx-font-weight: bold;" text="Proceder el pago" />
              </children>
            </HBox>

          </children>
        </VBox>
      </content>
    </ScrollPane>

  </children>
</StackPane>
