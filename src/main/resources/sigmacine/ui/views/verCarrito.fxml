<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!-- Carrito angosto, con fondo negro y scroll -->

<StackPane fx:id="carritoRoot" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
  <children>

    <!-- Ancho total aprox 420; alto aprox 560 -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="560.0" prefWidth="378.0" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED">
      <content>

        <!-- Contenedor principal (borde rojo) un poco más angosto -->
        <VBox prefHeight="500.0" prefWidth="376.0" style="-fx-padding: 25; -fx-spacing: 16; -fx-border-color: #8B2E21; -fx-border-width: 6; -fx-background-color: black; -fx-pref-height: 500; -fx-pref-width: 370;">
          <children>

            <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: white;" text="Mi carrito" />

            <!-- Tarjeta de producto (borde morado) -->
            <VBox alignment="CENTER" prefWidth="352.0" style="-fx-border-color: #5A3084; -fx-padding: 14; -fx-spacing: 10; -fx-border-radius: 10; -fx-background-color: #181818; -fx-border-width: 3;">
              <children>
                <HBox spacing="12">
                  <children>
                    <ImageView fitHeight="110.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true" />
                    <VBox prefWidth="210.0" spacing="8">
                      <children>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" text="[Producto]" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #cfcfcf;" text="[Descripcion]" wrapText="true" />
                        <HBox alignment="CENTER_LEFT" spacing="10">
                          <children>
                            <Button style="-fx-background-color: #222; -fx-text-fill: white; -fx-background-radius: 20; -fx-pref-width: 28; -fx-pref-height: 28;" text="-" />
                            <Label style="-fx-text-fill: white;" text="1" />
                            <Button style="-fx-background-color: #222; -fx-text-fill: white; -fx-background-radius: 20; -fx-pref-width: 28; -fx-pref-height: 28;" text="+" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label style="-fx-text-fill: white;" text="[Precio]" />
                          </children>
                        </HBox>
                      </children>
                    </VBox>
                  </children>
                </HBox>
              </children>
            </VBox>

            <!-- Resumen -->
            <VBox prefHeight="175.0" prefWidth="314.0" style="-fx-padding: 8; -fx-spacing: 12;">
              <children>
                <Label style="-fx-text-fill: #929292; -fx-font-size: 14px; -fx-font-weight: bold;" text="Tiquetes" />
                <HBox>
                  <children>
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="Total tiquetes" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="[Precio]" />
                  </children>
                </HBox>
                <HBox style="-fx-background-color: #2B2B2B; -fx-background-radius: 10; -fx-spacing: 16; -fx-padding: 12;">
                  <children>
                    <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #ffffff;" text="TOTAL" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #ffffff;" text="[Precio]" />
                  </children>
                </HBox>
              </children>
            </VBox>
                  <Region prefHeight="200.0" prefWidth="200.0" />

            <!-- Botón pagar -->
            <HBox alignment="CENTER">
              <children>
                <Button style="-fx-background-color: #8B2E21; -fx-font-size: 13px; -fx-text-fill: white; -fx-padding: 7 18; -fx-background-radius: 20; -fx-font-weight: bold;" text="Proceder el pago" />
              </children>
            </HBox>

          </children>
        </VBox>
      </content>
    </ScrollPane>

  </children>
</StackPane>