<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.FlowPane?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sigmacine.ui.controller.AsientosController"
            prefWidth="1100" prefHeight="620"
            style="-fx-background-color:#000;"
            stylesheets="@sigma.css">

    <!-- ===== TOP BAR ===== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" BorderPane.alignment="CENTER" styleClass="topbar">
            <children>
                <Label text="SIGMA CINE" styleClass="brand" onMouseClicked="#onBrandClick" style="-fx-cursor: hand;"/>

                <Button fx:id="btnCartelera"  text="Cartelera"  styleClass="toplink"/>
                <Button fx:id="btnConfiteria" text="Confitería" styleClass="toplink"/>
                <Button fx:id="btnSigmaCard"  text="Sigma Card" styleClass="toplink"/>

                <Region HBox.hgrow="ALWAYS"/>

                <TextField fx:id="txtBuscar" promptText="Buscar" prefWidth="200" styleClass="search"/>
                <Button fx:id="btnBuscar" text="Buscar" onAction="#onBuscarTop"/>

                <Button fx:id="btnCart" text="Cart" styleClass="toplink"/>

                <!-- Controles de sesión -->
                <Button fx:id="btnIniciarSesion" text="Iniciar sesión" styleClass="toplink"/>
                <Label fx:id="lblUserName" text="" styleClass="toplink" visible="false"/>
                <Button fx:id="btnRegistrarse" text="Registrarse" styleClass="toplink"/>

                <!-- Menú de perfil -->
                <MenuButton fx:id="menuPerfil" text="" styleClass="icon-btn">
                    <items>
                        <MenuItem text="Mi Cuenta"/>
                        <MenuItem text="Buscar Tiquetes"/>
                        <MenuItem text="Confitería"/>
                        <MenuItem text="Promociones"/>
                        <MenuItem text="Información Personal"/>
                        <MenuItem text="SigmaCard"/>
                        <MenuItem fx:id="miHistorial" text="Historial de compras"/>
                        <MenuItem text="Notificaciones"/>
                        <MenuItem text="Cartelera"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="miCerrarSesion" text="Cerrar Sesión"/>
                    </items>
                </MenuButton>
            </children>
            <padding><Insets top="10" right="16" bottom="10" left="16"/></padding>
        </HBox>
    </top>

    <!-- ===== CENTRO ===== -->
    <center>
        <VBox spacing="14" style="-fx-background-color:#000;">
            <children>
                <Label text="Selecciona tus asientos" style="-fx-text-fill:#fff; -fx-font-weight:bold;">
                    <font><Font size="20"/></font>
                </Label>
                <Separator/>

                <HBox spacing="40" alignment="TOP_LEFT">
                    <padding><Insets top="10" right="24" bottom="24" left="24"/></padding>

                    <!-- IZQUIERDA: sala -->
                    <VBox spacing="18" alignment="TOP_CENTER">
                        <children>
                            <!-- Pantalla -->
                            <StackPane prefHeight="56" maxWidth="Infinity">
                                <Region StackPane.alignment="CENTER" prefHeight="6"
                                        style="-fx-background-color:#C0392B; -fx-background-radius:120;"/>
                                <Label StackPane.alignment="CENTER" text="PANTALLA"
                                       style="-fx-text-fill:#ffffff; -fx-font-weight:bold; -fx-letter-spacing:1px;"/>
                            </StackPane>

                            <!-- Lienzo + grilla (la llena el controller) -->
                            <VBox spacing="14" style="-fx-background-color:#0a0a0a; -fx-background-radius:10; -fx-padding:22;">
                                <children>
                                    <GridPane fx:id="gridSala" hgap="10" vgap="10" alignment="CENTER">
                                        <padding><Insets left="72" right="72"/></padding>
                                    </GridPane>
                                </children>
                            </VBox>
                        </children>
                    </VBox>

                    <!-- DERECHA: info -->
                    <VBox spacing="18" alignment="TOP_LEFT" prefWidth="340"
                          style="-fx-background-color:#0a0a0a; -fx-background-radius:10; -fx-padding:18;">
                        <children>
                            <!-- Cabecera -->
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <children>
                                    <StackPane prefWidth="56" prefHeight="56"
                                               style="-fx-background-color:#222; -fx-background-radius:8;">
                                        <ImageView fx:id="imgPoster" fitWidth="56" fitHeight="56" preserveRatio="true"/>
                                    </StackPane>
                                    <VBox spacing="6">
                                        <children>
                                            <Label fx:id="lblTitulo" text="Película" style="-fx-text-fill:#fff; -fx-font-weight:bold;">
                                                <font><Font size="16"/></font>
                                            </Label>
                                            <Label fx:id="lblHoraPill" text="1:10 pm" styleClass="pill"/>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <!-- Convención: cajitas con estilo INLINE idéntico al grid -->
                            <Label text="Información" style="-fx-text-fill:#ddd; -fx-font-weight:bold;"/>
                            <FlowPane hgap="18" vgap="12" rowValignment="CENTER" columnHalignment="LEFT" prefWrapLength="300">

                                <!-- Disponibles (borde rojo) -->
                                <HBox spacing="8" alignment="CENTER_LEFT">
                                    <Pane minWidth="26" minHeight="26" prefWidth="26" prefHeight="26" maxWidth="26" maxHeight="26"
                                          style="-fx-background-color: transparent;
                                                 -fx-border-color: #e0665a;
                                                 -fx-border-width: 2;
                                                 -fx-background-radius: 6;
                                                 -fx-border-radius: 6;"/>
                                    <Label text="Disponibles" style="-fx-text-fill:#bbb; -fx-font-size:12px;"/>
                                </HBox>

                                <!-- No disponibles (vino sólido) -->
                                <HBox spacing="8" alignment="CENTER_LEFT">
                                    <Pane minWidth="26" minHeight="26" prefWidth="26" prefHeight="26" maxWidth="26" maxHeight="26"
                                          style="-fx-background-color: #8b2c24;
                                                 -fx-border-color: #8b2c24;
                                                 -fx-border-width: 2;
                                                 -fx-background-radius: 6;
                                                 -fx-border-radius: 6;"/>
                                    <Label text="No disponibles" style="-fx-text-fill:#bbb; -fx-font-size:12px;"/>
                                </HBox>

                                <!-- Accesibles (glow rojito permanente) -->
                                <HBox spacing="8" alignment="CENTER_LEFT">
                                    <Pane minWidth="26" minHeight="26" prefWidth="26" prefHeight="26" maxWidth="26" maxHeight="26"
                                          style="-fx-background-color: transparent;
                                                 -fx-border-color: rgba(255,190,180,0.95);
                                                 -fx-border-width: 2;
                                                 -fx-background-radius: 6;
                                                 -fx-border-radius: 6;
                                                 -fx-effect: dropshadow(gaussian, rgba(210,74,57,0.70), 18, 0.50, 0, 0);"/>
                                    <Label text="Discapacitados" style="-fx-text-fill:#bbb; -fx-font-size:12px;"/>
                                </HBox>

                            </FlowPane>

                            <!-- Resumen + CTA -->
                            <Label fx:id="lblResumen" text="0 Sillas seleccionadas"
                                   style="-fx-text-fill:#ffffff; -fx-font-weight:bold;"/>
                            <Button fx:id="btnContinuar" text="Continuar" onAction="#onContinuar"
                                    maxWidth="Infinity" styleClass="cta"/>
                        </children>
                    </VBox>
                </HBox>
            </children>
            <padding><Insets top="0" right="0" bottom="8" left="0"/></padding>
        </VBox>
    </center>
</BorderPane>
