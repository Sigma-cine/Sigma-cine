<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="510.0" prefWidth="857.0" styleClass="dark-bg" stylesheets="@sigma.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sigmacine.ui.controller.LoginController">
   <left>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
   <top>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="81.0" prefWidth="423.0" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
      
                                  <!-- Tarjeta blanca -->
                <VBox alignment="TOP_CENTER" layoutX="51.0" layoutY="-23.0" prefHeight="435.0" prefWidth="338.0" spacing="12" styleClass="auth-card">
               <children>
                  <Pane prefHeight="43.0" prefWidth="263.0" style="-fx-background-color: #8B2E21; -fx-background-radius: 15 15 0 0;">
                     <children>
                        <Label contentDisplay="CENTER" layoutX="79.0" layoutY="9.0" style="-fx-text-fill: #ffffff; -fx-font-weight: bold;" text="Iniciar Sesión">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </Pane>
      
                                            <!-- Usuario -->
                       <Label styleClass="field-label" text="Usuario" />
                       <TextField fx:id="emailField" promptText="Correo o usuario" styleClass="input" />
      
                                            <!-- Contraseña -->
                       <Label styleClass="field-label" text="Contraseña" />
                       <PasswordField fx:id="passwordField" promptText="Contraseña" styleClass="input" />
      
                                            <!-- Feedback -->
                       <Label fx:id="feedback" text="" />
      
                                            <!-- Botón principal -->
                       <Button fx:id="loginButton" styleClass="primary-btn" text="Iniciar Sesión" />
      
                                            <!-- Registro -->
                       <HBox alignment="CENTER" spacing="6">
                           <children>
                               <Label styleClass="text-dark" text="¿No tienes cuenta?" />
                               <Hyperlink fx:id="registrarLink" styleClass="text-link" text="Regístrate" />
                           </children>
                       </HBox>
               </children>
      
                                  </VBox>
         </children>
      </Pane>
   </center>
</BorderPane>
