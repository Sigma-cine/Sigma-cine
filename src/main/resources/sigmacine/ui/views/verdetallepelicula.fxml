<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="960.0" prefHeight="600.0" stylesheets="@sigma.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sigmacine.ui.controller.VerDetallePeliculaController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="topbar">
            <children>
                <Button fx:id="btnBack" styleClass="toplink" text="← Volver" onAction="#onVolver" />
                <Label styleClass="brand" text="SIGMA CINE" onMouseClicked="#onBrandClick" style="-fx-cursor: hand;"/>
                <Button fx:id="btnCarteleraTop" styleClass="toplink" text="Cartelera" onAction="#onCartelera" />
                <Button styleClass="toplink" text="Confitería" />
                <Button styleClass="toplink" text="Sigma Card" />
                <Region HBox.hgrow="ALWAYS" />
                <TextField prefWidth="200" promptText="Buscar" styleClass="search" />
                <VBox fx:id="carritoPanel" spacing="16">
                    <children>
                        <Button styleClass="toplink" text="Cart" />
                    </children>
                </VBox>
                <Button fx:id="btnIniciarSesion" text="Iniciar sesión" styleClass="toplink" />
                <Label fx:id="lblUserName" text="" styleClass="toplink" visible="false" />
                <Button fx:id="btnRegistrarse" text="Registrarse" styleClass="toplink" />

                <MenuButton fx:id="menuPerfil" styleClass="icon-btn" text="👤">
                    <items>
                        <MenuItem text="Mi Cuenta" />
                        <MenuItem text="Buscar Tiquetes" />
                        <MenuItem text="Confitería" />
                        <MenuItem text="Promociones" />
                        <MenuItem text="Información Personal" />
                        <MenuItem text="SigmaCard" />
                        <MenuItem fx:id="miHistorial" text="Historial de compras" />
                        <MenuItem text="Notificaciones" />
                        <MenuItem text="Cartelera" />
                        <SeparatorMenuItem />
                        <MenuItem fx:id="miCerrarSesion" text="Cerrar Sesión" />
                    </items>
                </MenuButton>
            </children>
            <padding>
                <Insets bottom="8" left="16" right="16" top="8" />
            </padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #0D0D0D; -fx-background-color: #0D0D0D;" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="detalleRoot" spacing="16" style="-fx-background-color: transparent;" alignment="TOP_CENTER">
                    <children>
                        <HBox spacing="24" alignment="TOP_CENTER" prefWidth="820">
                            <children>
                                <VBox spacing="12" alignment="TOP_CENTER" prefWidth="410">
                                    <children>
                                        <Label fx:id="lblTituloPelicula" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 28;" wrapText="true" />
                                        <ImageView fx:id="imgPoster" fitWidth="260.0" preserveRatio="true" />
                                    </children>
                                </VBox>

                                <VBox spacing="12" alignment="TOP_LEFT" prefWidth="410">
                                    <children>
                                        <Label text="SINOPSIS" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                                        <TextArea fx:id="txtSinopsis" editable="false" prefHeight="180.0" wrapText="true" style="-fx-control-inner-background: #0D0D0D; -fx-text-fill: white; -fx-border-color: #2a2a2a;" />

                                        <Label text="FICHA TÉCNICA" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" />
                                        <GridPane hgap="10" vgap="6" style="-fx-background-color: transparent;">
                                            <columnConstraints>
                                                <ColumnConstraints halignment="RIGHT" minWidth="110"/>
                                                <ColumnConstraints hgrow="ALWAYS"/>
                                            </columnConstraints>
                                            <children>
                                                <Label text="Género:" style="-fx-text-fill: #cbd5e1;"/>
                                                <Label fx:id="lblGenero" GridPane.columnIndex="1" style="-fx-text-fill: #ffffff;"/>

                                                <Label text="Clasificación:" GridPane.rowIndex="1" style="-fx-text-fill: #cbd5e1;"/>
                                                <Label fx:id="lblClasificacion" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-text-fill: #ffffff;"/>

                                                <Label text="Duración:" GridPane.rowIndex="2" style="-fx-text-fill: #cbd5e1;"/>
                                                <Label fx:id="lblDuracion" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: #ffffff;"/>

                                                <Label text="Director:" GridPane.rowIndex="3" style="-fx-text-fill: #cbd5e1;"/>
                                                <Label fx:id="lblDirector" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-text-fill: #ffffff;"/>

                                                <Label text="Reparto:" GridPane.rowIndex="4" style="-fx-text-fill: #cbd5e1;"/>
                                                <Label fx:id="lblReparto" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-text-fill: #ffffff;" wrapText="true"/>
                                            </children>
                                        </GridPane>

                                        <HBox alignment="CENTER_RIGHT">
                                            <children>
                                                <Button fx:id="btnComprar" style="-fx-background-color: #8A2F24; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 12 24 12 24;" text="Comprar Tiquete" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <Label text="TRAILER" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" />
                        <HBox alignment="CENTER" prefWidth="820">
                            <children>
                                <VBox spacing="6" alignment="CENTER">
                                    <children>
                                        <HBox fx:id="trailerButtons" spacing="8" alignment="CENTER" />
                                        <StackPane fx:id="trailerContainer" prefHeight="360" prefWidth="600" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets top="12" right="12" left="12" bottom="24" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
 
