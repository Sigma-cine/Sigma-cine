<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;">
    <Label text="Buscar Películas" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <HBox spacing="10">
        <TextField fx:id="txtTitulo" promptText="Ingrese título o parte del título..." />
        <Button text="Buscar" onAction="#onBuscar" />
    </HBox>
    <TableView fx:id="tablaPeliculas" prefHeight="300" prefWidth="700">
        <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="40" />
            <TableColumn text="Título" fx:id="colTitulo" prefWidth="150" />
            <TableColumn text="Género" fx:id="colGenero" prefWidth="100" />
            <TableColumn text="Clasificación" fx:id="colClasificacion" prefWidth="100" />
            <TableColumn text="Duración" fx:id="colDuracion" prefWidth="80" />
            <TableColumn text="Dirección" fx:id="colDireccion" prefWidth="100" />
            <TableColumn text="Reparto" fx:id="colReparto" prefWidth="150" />
            <TableColumn text="Trailer" fx:id="colTrailer" prefWidth="100" />
            <TableColumn text="Sinopsis" fx:id="colSinopsis" prefWidth="200" />
            <TableColumn text="Estado" fx:id="colEstado" prefWidth="60" />
        </columns>
    </TableView>
</VBox>
