<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="510.0" prefWidth="857.0" styleClass="dark-bg" stylesheets="@sigma.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sigmacine.ui.controller.LoginController">
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <!-- Centered auth card: use layout panes instead of absolute positions so it keeps centered on large screens -->
            <VBox StackPane.alignment="CENTER" alignment="CENTER" spacing="0.0" style="-fx-padding: 0; -fx-max-width: 420px;" styleClass="auth-card centered">
               <children>
                  <!-- Header inside the card so it doesn't stretch full width of the window -->
                  <HBox alignment="CENTER" prefHeight="52.0" style="-fx-background-color: #8B2E21; -fx-background-radius: 15 15 0 0; -fx-padding: 8 12;">
                     <children>
                        <Label text="Iniciar Sesión" style="-fx-text-fill: #ffffff; -fx-font-weight: bold;" />
                     </children>
                  </HBox>

                  <!-- Content area: use a VBox with padding to layout fields cleanly -->
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 16; -fx-background-radius: 0 0 15 15; -fx-background-color: -fx-background;">
                     <children>
                        <VBox alignment="CENTER_LEFT" spacing="6.0" style="-fx-pref-width: 100%;">
                           <children>
                              <Label styleClass="field-label" text="Usuario" />
                              <TextField fx:id="emailField" prefHeight="30.0" promptText="Correo o usuario" styleClass="input" />
                              <Label styleClass="field-label" text="Contraseña" />
                              <PasswordField fx:id="passwordField" prefHeight="30.0" promptText="Contraseña" styleClass="input" />
                           </children>
                        </VBox>

                        <Label fx:id="feedback" text="" />

                        <Button fx:id="loginButton" styleClass="primary-btn" text="Iniciar Sesión" maxWidth="200" />

                        <HBox alignment="CENTER" spacing="6">
                           <children>
                              <Label styleClass="text-dark" text="¿No tienes cuenta?" />
                              <Hyperlink fx:id="registrarLink" styleClass="text-link" text="Regístrate" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>