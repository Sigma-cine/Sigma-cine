<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="517.0" prefWidth="883.0"
            stylesheets="@sigma.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sigmacine.ui.controller.DetallePeliculaController">

    <!-- ===== TOP BAR ===== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="topbar">
            <children>
                <Label styleClass="brand" text="SIGMA CINE" />
                <Button styleClass="toplink" text="Cartelera" />
                <Button styleClass="toplink" text="Confitería" />
                <Button styleClass="toplink" text="Sigma Card" />
                <Region HBox.hgrow="ALWAYS" />
                <TextField prefWidth="200" promptText="Buscar" styleClass="search" />
                <VBox fx:id="carritoPanel" spacing="16">
                    <children>
                        <Button fx:id="btnCart" text="Cart"/>
                    </children>
                </VBox>
                <MenuButton styleClass="icon-btn" text="👤">
                    <items>
                        <MenuItem text="Mi Cuenta" />
                        <MenuItem text="Buscar Tiquetes" />
                        <MenuItem text="Confitería" />
                        <MenuItem text="Promociones" />
                        <MenuItem text="Información Personal" />
                        <MenuItem text="SigmaCard" />
                        <MenuItem text="Historial de compras" />
                        <MenuItem text="Notificaciones" />
                        <MenuItem text="Cartelera" />
                        <SeparatorMenuItem />
                        <MenuItem text="Cerrar Sesión" />
                    </items>
                </MenuButton>
            </children>
            <padding>
                <Insets bottom="8" left="16" right="16" top="8" />
            </padding>
        </HBox>
    </top>

    <!-- IZQUIERDA -->
    <left>
    <VBox prefHeight="421.0" prefWidth="437.0" spacing="12"
          style="-fx-background-color: #0D0D0D;" BorderPane.alignment="CENTER">
        <children>
            <Label fx:id="lblSinopsisTitulo"
                   style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;"
                   text="SINOPSIS" />

            <!-- ===== FICHA TÉCNICA ===== -->
            <Label text="FICHA TÉCNICA"
                   style="-fx-text-fill: #e5e7eb; -fx-font-weight: bold; -fx-font-size: 14;"/>
            <GridPane hgap="10" vgap="6" style="-fx-background-color: transparent;">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="110"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <children>
                    <Label text="Género:" style="-fx-text-fill: #cbd5e1;"/>
                    <Label fx:id="lblGenero" GridPane.columnIndex="1" style="-fx-text-fill: #ffffff;"/>

                    <Label text="Clasificación:" GridPane.rowIndex="1" style="-fx-text-fill: #cbd5e1;"/>
                    <Label fx:id="lblClasificacion" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-text-fill: #ffffff;"/>

                    <Label text="Duración:" GridPane.rowIndex="2" style="-fx-text-fill: #cbd5e1;"/>
                    <Label fx:id="lblDuracion" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: #ffffff;"/>

                    <Label text="Director:" GridPane.rowIndex="3" style="-fx-text-fill: #cbd5e1;"/>
                    <Label fx:id="lblDirector" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-text-fill: #ffffff;"/>

                    <Label text="Reparto:" GridPane.rowIndex="4" style="-fx-text-fill: #cbd5e1;"/>
                    <Label fx:id="lblReparto" GridPane.columnIndex="1" GridPane.rowIndex="4"
                           style="-fx-text-fill: #ffffff;" wrapText="true"/>
                </children>
            </GridPane>

            <!-- Poster -->
            <ImageView fx:id="imgPoster" fitHeight="241.0" fitWidth="405.0" preserveRatio="true" />

            <!-- Sinopsis -->
            <TextArea fx:id="txtSinopsis" editable="false" prefHeight="147.0" prefRowCount="12" prefWidth="405.0"
                      style="-fx-control-inner-background: #0D0D0D; -fx-text-fill: white; -fx-border-color: #2a2a2a;"
                      text="" wrapText="true" />
        </children>
        <padding>
            <Insets bottom="16" left="16" right="16" top="16" />
        </padding>
    </VBox>
</left>

    <!-- DERECHA -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #0D0D0D; -fx-background-color: #0D0D0D;" BorderPane.alignment="CENTER">
            <content>
                <VBox spacing="20" style="-fx-background-color: #0D0D0D;" fx:id="panelFunciones">
                    <children>
                        <Label fx:id="lblDia" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" text="DÍA" />

                        <!-- Aquí dejas tus sedes/horarios tal cual, o los generamos por código -->
                        <!-- ... (tu contenido actual) ... -->

                        <HBox alignment="CENTER_RIGHT">
                            <children>
                                <Button fx:id="btnComprar" style="-fx-background-color: #8A2F24; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 8 18 8 18;" text="Comprar Tiquete" />
                            </children>
                            <padding>
                                <Insets bottom="8" left="8" right="8" top="8" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="24" left="20" right="20" top="16" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
