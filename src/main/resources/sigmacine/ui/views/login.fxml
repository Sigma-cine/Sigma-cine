<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="510.0" prefWidth="857.0" styleClass="dark-bg" stylesheets="@sigma.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sigmacine.ui.controller.LoginController">
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>

                                  <!-- Tarjeta blanca -->
                <VBox alignment="TOP_CENTER" layoutX="260.0" layoutY="108.0" prefHeight="295.0" prefWidth="338.0" spacing="12.0" style="-fx-padding: 0;" styleClass="auth-card">
               <children>
                  <Pane prefHeight="43.0" prefWidth="370.0" style="-fx-background-color: #8B2E21; -fx-background-radius: 15 15 0 0;">
                     <children>
                        <Label contentDisplay="CENTER" layoutX="116.0" layoutY="11.0" style="-fx-text-fill: #ffffff; -fx-font-weight: bold;" text="Iniciar Sesión">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </Pane>
                  <Pane prefHeight="243.0" prefWidth="338.0">
                     <children>

                                                  <!-- Usuario -->
                             <Label layoutX="22.0" styleClass="field-label" text="Usuario" />
                             <TextField fx:id="emailField" layoutX="34.0" layoutY="29.0" prefHeight="30.0" prefWidth="262.0" promptText="Correo o usuario" styleClass="input" />

                                                  <!-- Contraseña -->
                             <Label layoutX="22.0" layoutY="74.0" styleClass="field-label" text="Contraseña" />
                             <PasswordField fx:id="passwordField" layoutX="34.0" layoutY="103.0" prefHeight="29.0" prefWidth="262.0" promptText="Contraseña" styleClass="input" />

                                                  <!-- Feedback -->
                             <Label fx:id="feedback" layoutX="12.0" layoutY="142.0" prefHeight="24.0" prefWidth="317.0" text="" />

                                                  <!-- Registro -->
                             <HBox alignment="CENTER" spacing="6" />

                                                  <!-- Botón principal -->
                             <Button fx:id="loginButton" layoutX="112.0" layoutY="166.0" styleClass="primary-btn" text="Iniciar Sesión" />
                        <HBox layoutX="86.0" layoutY="200.0" prefHeight="28.0" prefWidth="168.0">
                           <children>
                                     <Label prefHeight="21.0" prefWidth="101.0" styleClass="text-dark" text="¿No tienes cuenta?" />
                                     <Hyperlink fx:id="registrarLink" styleClass="text-link" text="Regístrate" />
                           </children>
                        </HBox>
                     </children>
                  </Pane>
               </children>

                                  </VBox>
         </children>
      </Pane>
   </center>
</BorderPane>
